<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Techdesk | IET</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css' rel="stylesheet">
    <script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
</head>
<body>
    <div class="container">
            <%- messages('message', locals) %>
      <h1>Edit Post</h1>
      <form method="POST" action="/techdesk/post/edit/<%=post.id%>">
        <div id="form-group">
            <label>Title</label>
            <input class="form-control" name="title" type="text" value="<%=post.title%>" required>
        </div>
        <div id="form-group">
                <label>Body</label>
                <textarea type="text" class="form-control" name="body" placeholder="Write post body here" required><%=post.body%></textarea>
            </div>
            <div id="form-group">
                    <label>Author</label>
                    <input class="form-control" name="author" type="text" value="<%=post.author%>">
                </div>
        <div id="form-group">
                <label>Admin Password</label>
            <input class="form-control" id="password" name="password" type="password" required>
        </div>
        <br>
        <input class="btn btn-outline-success" type="submit" value="Submit">
        
        </form>
        <form method="POST" action="/techdesk/post/delete/<%=post.id%>">
            <br>
            <input class="form-control" id="pass" name="password" type="password" style="display:none" required>
        <button class="btn btn-danger"  type="submit" id="delete-btn">Delete POST</button>
        </form>
    </div>
    <script>
        $("#password").change(function(){
            console.log("YO");
            $("#pass").val($("#password").val());
        });
        
        $("#delete-btn").on("click",()=>{
            $("#pass").val($("#password").val());
        });
            CKEDITOR.replace( 'body' );
            var x=$("#detailsinvisible").text();
         $("#details").html(x);
         $("img").addClass("img");
        $("img").addClass("img-fluid");
            </script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js'></script>
        <script src='/js/delete.js'></script>
</body>
</html>