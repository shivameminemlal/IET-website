    <div class="row">
        <% posts.forEach(function(post){ %>
           
                <!-- <a href="/techdesk/post/<%=post.id%>" style="color:black"><h2><%=post.title%></h2></a> -->
                <div class="col-md-4 col-sm-6" style="padding:10px;">
                    <div style="height:300px;border:2px solid rgb(0, 0, 0);border-radius:10px;width:100%;text-align:center;">
                        <div style="display: table; height: 200px; overflow: hidden;text-align:center;width:100%">
                            <div style="display: table-cell; vertical-align: middle;">
                            <a href="/techdesk/post/<%=post.id%>" style="color:rgb(17, 104, 145);"><h1><%=post.title%></h1></a>
                            </div>
                        </div>
                        <hr>
                        <div style="height:25px">
                          <%=post.author%>
                        </div>
                        <div style="height:25px">
                                Added on <%=post.postdate%>
                              </div>
                    </div>

                </div>
            
        <% }) %>
        </div>
        <br><br>
